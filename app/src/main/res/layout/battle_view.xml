<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/indicationTextOthers"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_1">
    </TextView>

    <TextView
        android:id="@+id/indicationTextplayer"
        android:text=""
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_235">
    </TextView>

    <ImageView
        android:id="@+id/animalVisual"
        android:textSize="15dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/axolotl"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintBottom_toBottomOf="@+id/horizontal_95"/>

    <!-- Buttons -->

    <Button
        android:id="@+id/buttonPoids"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:alpha="0"
        android:background="@drawable/button_border"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_60">

    </Button>

    <Button
        android:id="@+id/buttonLongueur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@drawable/button_border"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_64">

    </Button>

    <Button
        android:id="@+id/buttonLongevite"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@drawable/button_border"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_68">

    </Button>

    <Button
        android:id="@+id/buttonGestation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="@drawable/button_border"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintStart_toStartOf="@+id/vertical_5"
        app:layout_constraintTop_toTopOf="@+id/horizontal_72">

    </Button>

    <!-- Guidelines horizontales -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_235"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.235"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.57"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.605"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.675"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />


    <!-- Guidelines verticales -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        />
</androidx.constraintlayout.widget.ConstraintLayout>